<header class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container-lg">
    <%= link_to "sample app", root_path, class: "navbar-brand", id: "logo" %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
      <li class="nav-item"><%= link_to "Home", root_path , class: "nav-link" %></li>
      <li class="nav-item"><%= link_to "Help", help_path, class: "nav-link" %></li>

      <% if logged_in? %>
        <li class="nav-item"><%= link_to "Users", users_path , class: "nav-link" %></li>
        <li class="dropdown nav-item">
          <a href="#" id="account" class="dropdown-toggle nav-link" role="button" data-bs-toggle="dropdown" aria-expanded="false">Account</a>
          <ul id="dropdown-menu" class="dropdown-menu" >
            <li><%= link_to "Profile", current_user, class:"dropdown-item" %></li>
            <li><%= link_to "Settings", edit_user_path(current_user), class:"dropdown-item" %></li>
            <li><hr class="dropdown-divider"></li>
            <li>
              <%= link_to "Log out", logout_path, data: { "turbo-method": :delete }, class:"dropdown-item" %>
            </li>
          </ul>
        </li>
      <% else %>
        <li class="nav-item"><%= link_to "Log in", login_path, class: "nav-link" %></li>
      <% end %>

      </ul>
    </div>
  </div>
</header>